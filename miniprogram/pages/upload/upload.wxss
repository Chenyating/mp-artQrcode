/* miniprogram/pages/upload/upload.wxss */
.opt{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 20rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.user{
  text-align: center;
  margin-right: 40rpx;
  display: flex;
  align-items: center;
}
.user-name{
  font-weight: bold;
  color: #fff;
  line-height: 50rpx;
  font-size: 36rpx;
  margin-left: 20rpx;
}
.list{
padding: 15rpx;
width: 750rpx;
box-sizing: border-box;
display: flex;
flex-wrap: wrap;
justify-content: center;
}
.item{
  width: 210rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: inline-block;
  margin-bottom: 25rpx;
}
.item-name{
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}
.img{
  width: 175rpx;
  height: 175rpx;
  margin: 15rpx;
  box-sizing: border-box;
}
.img image{
  width: 100%;
  height: 100%;
}

.input{
  background: #FFFFFF;
    border: 4rpx solid #000000;
    box-shadow: 4rpx 4rpx 0rpx #000;
    height: 80rpx;
    border-radius: 32rpx;
    padding-left: 20rpx;
    font-size: 36rpx;
    font-weight: bold;
}
.txt{
  font-size: 36rpx;
  margin: 20rpx 0;
}
.img-box{
  width:100%;
  height: 500rpx;
  overflow: scroll;
  
}
.img-item{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  padding: 20rpx;
  background: #FFFFFF;
  border: 4rpx solid #000000;
  box-shadow: 4rpx 4rpx 0rpx #000;
  box-sizing: border-box;
  margin: 10rpx;
}
.img-item image{
  width: 100%;
  height: 100%;
}
.popbox{
  height: 600rpx;
  overflow: scroll;
}