/* miniprogram/pages/qrcode/qrcode.wxss */
.qrcode{
  margin: 30rpx auto;
  display: block;

}
.item{
margin: 70rpx auto;
text-align: center;
}
.popbox{
  text-align: center;
}
.tit{
  font-size: 36rpx;
  font-weight: bold;
  text-align: left;
  margin-bottom: 40rpx;
}
.opt{
  text-align: center;
}
.add-box{
  margin: 20rpx;
}
.img{
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}
.img image{
  width: 100%;
  height: 100%;
}
.input{
  border-radius: 10rpx;
  border: 4rpx solid #000000;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 0rpx #D098FF;
  background: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 32rpx;
  margin-bottom: 50rpx;
  height: 200rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  padding: 20rpx;
}
.missbox{
  position: absolute;
  width: 90%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  height: 90%;
  background: #fff;
  z-index: 9;
}