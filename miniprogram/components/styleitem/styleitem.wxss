/* pages/styleitem/styleitem.wxss */
.item {
  width: 330rpx;
  box-sizing: border-box;
  display: inline-block;
}

.img {
  margin: 20rpx;
  margin-right: 30rpx;
  width:280rpx;
  height: 280rpx;
}

.img image {
  width: 100%;
  height: 100%;
  border: 4rpx solid #FFFFFF;
  filter: drop-shadow(4rpx 4rpx 0rpx rgba(17, 17, 17, 0.5));
  border-radius: 25rpx;
  box-sizing: border-box;
}

/* 内容 */
.content {
  margin: 15rpx;
}

.tit {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-name {
  margin-left: 15rpx;
  font-size: 24rpx;
}

.user-num {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.user-num::before {
  content: '';
  background-image: url('data:image/png;base64,');
  width: 27rpx;
  height: 27rpx;
  background-size: contain;
}