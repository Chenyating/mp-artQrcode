/* components/avatar/avatar.wxss */
.avatar{
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  overflow: hidden;
  border: 4rpx solid #18191F;
  z-index: 2;
  background: #fff;
  box-sizing: border-box;
}
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}