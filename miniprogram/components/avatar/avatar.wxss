/* components/avatar/avatar.wxss */
.avatar {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  overflow: hidden;
  border: 4rpx solid #000000;
  box-sizing: border-box;
  box-shadow: var(--box-shadow);
  background: #fff;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}